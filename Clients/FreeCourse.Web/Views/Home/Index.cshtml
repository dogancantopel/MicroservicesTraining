@{
	ViewData["Title"] = "Home Page";
	var count = 0;
}
@model List<CourseViewModel>


<h2>Kurslar</h2>

@if (Model.Any())
{
	@foreach (var item in Model)
	{
		count++;
		if (count == 1 || (count % 3 == 1))
		{
			@Html.Raw("<div class='row row-cols-1 row-cols-md-3 g-4 mb-2'>")
		}
		<div class="card" style="width: 18rem;">
			<img src="@item.FullUrl" class="card-img-top" alt="...">
			<div class="card-body">
				<h5 class="card-title">@item.Name</h5>
				<p class="card-text">@item.ShortDescription</p>
				<h4 class="text-primary">@item.Price TL</h4>
				<a asp-route-id="@item.Id" asp-controller="home" asp-action="detail" class="btn btn-primary">Detay</a>
			</div>
		</div>
		if (count % 3 == 0)
		{
			@Html.Raw("</div>")
		}
	}
}