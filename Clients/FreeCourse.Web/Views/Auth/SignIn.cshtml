@{
	ViewData["Title"] = "SignIn";
}
@model FreeCourse.Web.Models.SignInInput

<div class="row">
	<div class="col-md-4 offset-md-4">
		<div class="card">
			<div class="card-body">
				<h5>Üye Girişi</h5>
				<div asp-validation-summary="ModelOnly"></div>
				<form asp-controller="Auth" asp-action="SignIn" method="post">
					<div class="mb-3">
						<label asp-for="Email" class="form-label"></label>
						<input asp-for="Email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
						<span asp-validation-for="Email" class="text-danger"></span>
					</div>
					<div class="mb-3">
						<label asp-for="Password" class="form-label"></label>
						<input type="password" class="form-control" asp-for="Password" id="exampleInputPassword1">
						<span asp-validation-for="Password" class="text-danger"></span>
					</div>
					<div class="mb-3 form-check">
						<input type="checkbox" asp-for="IsRemember" class="form-check-input" id="exampleCheck1">
						<label asp-for="IsRemember" class="form-check-label" for="exampleCheck1"></label>
					</div>
					<button type="submit" class="btn btn-primary">Giriş</button>
				</form>
			</div>

		</div>
	</div>
</div>


